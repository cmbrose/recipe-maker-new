# Database connection string
# Run scripts/deploy-cosmosdb.sh --account-name <your-account-name> to get the connection string
COSMOS_DB_CONNECTION_STRING="mongodb://recipe-maker-cosmos-dev"

# Next.js
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# Authentication (Google OAuth)
# Get credentials from: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID="your-google-client-id.apps.googleusercontent.com"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# NextAuth Secret (generate with: openssl rand -base64 32)
AUTH_SECRET="your-auth-secret-here"

# Auth URL - must match your OAuth redirect URI
# Development: http://localhost:3000
# Production: https://brose-recipes.com
AUTH_URL="http://localhost:3000"

# Optional: For production deployment
# NODE_ENV="production"