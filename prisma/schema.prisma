// Prisma schema for Recipe Maker with Azure Cosmos DB (MongoDB API)
//
// Note: MongoDB connector uses Json type for complex nested structures.
// Prisma's typed composite types are only available for SQL databases.
// We handle type safety in our service layer with transformation functions.

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("COSMOS_DB_CONNECTION_STRING")
}

// Recipe model - main entity for storing recipes
model Recipe {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  prepTime    Int?     // in minutes
  cookTime    Int?     // in minutes
  totalTime   Int?     // in minutes
  servings    Int?
  // MongoDB limitation: complex nested types must use Json
  // Runtime type: IngredientGroup[] (see types/recipe.ts)
  ingredients Json     
  // Runtime type: Direction[] (see types/recipe.ts)
  directions  Json
  previewUrl  String?
  source      String?  // Original URL if scraped
  sourceKind  String   // 'url' | 'manual'
  tags        String[]
  notes       String[]
  lastViewed  DateTime?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([tags])
  @@index([name])
  @@index([lastViewed])
  @@index([source])
}

// Menu model - collections of recipes
model Menu {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  recipeIds String[] @db.ObjectId
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([name])
}
